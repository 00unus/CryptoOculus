{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5043"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Polly": "Fatal"
        //"CryptoOculus.Services": "Error",
        //"CryptoOculus.Services.CexCompareService": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:MM/dd/yyyy HH:mm:ss}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-logs-.log",
          "rollingInterval": "Hour",
          "outputTemplate": "[{Timestamp:MM/dd/yyyy HH:mm:ss}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1;Port=3306;Database=cryptooculus;User=root;SslMode=none;"
  }
}